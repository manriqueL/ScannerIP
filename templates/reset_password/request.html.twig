{% extends 'security/login.html.twig' %}

{% block title %}Recuperación de contraseña
{% endblock %}
{% block bodyclass %}class="login"{% endblock %}
{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<div class="login_wrapper">
			<div class="login_form_header">
				<div class="isologotipo">
					<h2>SIDI - TSJ La Rioja</h2>
				</div>
			</div>
		<div class="animate form login_form">
			<section class="login_content">
				<h1>Recuperar Contraseña</h1>
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				
					<p>
						Ingrese su dirección de Email y le enviaremos una enlace para recuperar su contraseña.
					</p>
			
				<div>
				<br>
					<button class="btn btn-success-full submit">Enviar</button>
					{{ form_end(requestForm) }}
				</div>
			</section>
		</div>
	</div>
{% endblock %}
