{% extends "adminbase.html.twig" %}
{% block bars %}
    <div class="col-md-3 left_col menu_fixed">
        <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
                <a href="{{ path('inicio_index') }}" class="site_title"><i class="fa fa-paw"></i> <span>ONEHEALTH</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
                <div class="profile_pic">
                </div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu ">
                <div class="menu_section">
                    <ul class="nav side-menu">

                        {# MENÚ HOME #}
                        <li>
                            <a href="{{ path('inicio_index') }}">
                                <i class="fa fa-home"></i> Home
                            </a>
                        </li>

                        {# MENÚ DE EJEMPLO #}
                        <li>
                            <a href="#">
                                <i class="fa fa-book"></i> Ejemplo
                            </a>
                        </li>

                        {# MENÚ DE ADMINISTRACIÓN #}
                        {% if is_granted('ADMINISTRACION') %}
                        <li><a><i class="fa fa-gear"></i>Administrar <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li>
                                    <a href="{{ path('app_admin_users') }}">
                                        <i class="fa fa-user"></i>Usuarios
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('index_roles') }}">
                                        <i class="fa fa-list-alt"></i>Roles
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('index_reparticion') }}">
                                        <i class="fa fa-bookmark"></i>Reparticiones
                                    </a>
                                </li>
                            </ul>
                        </li>
                        {% endif %}

                    </ul>
                </div>

            </div>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
        </div>
    </div>

    <!-- top navigation -->
    <div class="top_nav">
        <div class="nav_menu" style="height: 55px;">
            <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
            </div>
            <nav class="nav navbar-nav">
                <ul class=" navbar-right">
                    <li class="nav-item dropdown open" style="padding-left: 15px; margin-top: 6px;">
                        <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                            {{ app.user.apellido ~ "," ~ app.user.nombre }}
                        </a>
                        <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item"  href="{{ path('app_admin_changepswd') }}"><i class="fa fa-key pull-right"></i>Cambiar contraseña</a>
                            <a class="dropdown-item"  href="{{ path('app_logout') }}"><i class="fa fa-sign-out pull-right"></i>Salir</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- /top navigation -->

    <!-- page content -->
    <div class="right_col" role="main">
        {% block alertsection %}
            <div class="row">
                {# Mensajes de ERROR #}
                {% for message in app.flashes("error") %}
                    <div class="alert alert-danger alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("error-nuevo") %}
                    <div class="alert alert-danger alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        Ocurrió un <strong>problema al crear</strong> el registro.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("error-eliminado") %}            
                    <div class="alert alert-danger alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        Ocurrió un <strong>problema al eliminar</strong> el registro.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("error-modificado") %}            
                    <div class="alert alert-danger alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        Ocurrió un <strong>problema al modificar</strong> el registro.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}

                {# Mensajes de SUCCESS #}
                {% for message in app.flashes("success") %}
                    <div class="alert alert-success alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("success-nuevo") %}
                    <div class="alert alert-success alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        El registro fue <strong>creado correctamente.</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("success-eliminado") %}
                    <div class="alert alert-success alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        El registro fue <strong>eliminado correctamente.</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes("success-modificado") %}
                    <div class="alert alert-success alert-dismissible" role="alert" style="width: 100%; font-size: 1.2em;">
                        El registro fue <strong>modificado correctamente.</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
            {% block contenpage %}{% endblock %}            
        {% endblock %}
    </div>
    <!-- /page content -->
{% endblock %}
